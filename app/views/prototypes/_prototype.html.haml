.col-sm-4.col-md-3.proto-content
  .thumbnail
    - if user_signed_in? && current_user.id == prototype.user_id
      .dropdown
        %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
          action
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          %li
            = link_to '編集', "/prototypes/#{prototype.id}/edit", method: :get
          %li
            = link_to '削除', "/prototypes/#{prototype.id}", method: :delete
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date

